
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- IISNode handler configuration -->
        <handlers>
            <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
        </handlers>

        <!-- URL Rewriting rules for IISNode -->
        <rewrite>
            <rules>
                <!-- Debug rule for Node Inspector -->
                <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
                    <match url="^dist/index.js\/debug[\/]?" />
                </rule>

                <!-- Static content rule -->
                <rule name="StaticContent" stopProcessing="false">
                    <match url="^(css|js|images|fonts|assets)/.*" />
                    <action type="Rewrite" url="public/{R:0}" />
                </rule>

                <!-- API and dynamic content rule -->
                <rule name="DynamicContent" stopProcessing="true">
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
                        <add input="{REQUEST_URI}" pattern="^/(api|auth|saml)" />
                    </conditions>
                    <action type="Rewrite" url="dist/index.js" />
                </rule>

                <!-- SPA fallback rule -->
                <rule name="SPAFallback" stopProcessing="true">
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="True" />
                    </conditions>
                    <action type="Rewrite" url="dist/index.js" />
                </rule>
            </rules>
        </rewrite>

        <!-- IISNode specific configuration -->
        <iisnode 
            node_env="production"
            nodeProcessCountPerApplication="2"
            maxConcurrentRequestsPerProcess="1024"
            maxNamedPipeConnectionRetry="100"
            namedPipeConnectionRetryDelay="250"
            asyncCompletionThreadCount="8"
            initialRequestBufferSize="4096"
            maxRequestBufferSize="65536"
            watchedFiles="web.config;*.js;dist\*.js"
            loggingEnabled="true"
            logDirectory="C:\TimeTracker\Logs"
            debuggingEnabled="false"
            debugHeaderEnabled="false"
            debuggerPortRange="5058-6058"
            gracefulShutdownTimeout="60000"
            enableXFF="true"
            promoteServerVars="LOGON_USER,AUTH_USER,AUTH_TYPE"
        />

        <!-- Security settings -->
        <security>
            <requestFiltering>
                <hiddenSegments>
                    <remove segment="bin" />
                    <add segment="node_modules" />
                    <add segment=".env" />
                    <add segment="logs" />
                </hiddenSegments>
                <requestLimits maxAllowedContentLength="104857600" />
            </requestFiltering>
        </security>

        <!-- HTTP errors configuration -->
        <httpErrors existingResponse="PassThrough" />

        <!-- Compression -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />
        
        <!-- Security headers -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
            </customHeaders>
        </httpProtocol>

        <!-- Default documents -->
        <defaultDocument>
            <files>
                <clear />
                <add value="dist/index.js" />
            </files>
        </defaultDocument>
    </system.webServer>

    <!-- Application settings for Node.js -->
    <appSettings>
        <add key="NODE_ENV" value="production" />
        <add key="WEBSITE_NODE_DEFAULT_VERSION" value="20.11.0" />
        <add key="SCM_COMMAND_IDLE_TIMEOUT" value="300" />
    </appSettings>
</configuration>
